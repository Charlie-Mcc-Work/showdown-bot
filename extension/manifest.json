{
  "manifest_version": 3,
  "name": "Pokemon Showdown Coach",
  "version": "1.0",
  "description": "AI-powered move recommendations for Pokemon Showdown",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://play.pokemonshowdown.com/*",
    "http://localhost:5000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://play.pokemonshowdown.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
